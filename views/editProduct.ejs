<% include layouts/header %>


<h2 class="page-title">Edit a Product</h2>
  <a href="/dashboard/products" class="btn btn-primary">Back</a>
  <br></br>

  <form method="post" action="/dashboard/products/edit-product/<%= productId %>" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" placeholder="title" value="<%= title %>" name="title"/>
    </div>
     <div class="form-group">
        <label for="slug">Slug</label>
        <input class="form-control" type="text" placeholder="slug" value="<%= slug %>" name="slug"/>
    </div>
    <div class="form-group">
        <label for="categories">Categories</label>
        <select name="category" class="form-control">
            <% categories.forEach(function(cat){ %>
                <option value="<%= cat.slug %>"
                <% if (cat.slug == category) { %>
                selected="selected"
                <% } %>        
                ><%= cat.title %></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <label for="desc">desc</label>
        <input class="form-control" type="text" placeholder="desc" value="<%= desc %>" name="desc"/>
    </div>
    <div class="form-group">
        <label for="slug">price</label>
        <input class="form-control" type="text" placeholder="price" value="<%= price %>" name="price"/>
    </div>

    <div class="form-group">
        <label for="">Current Image</label>
        <p>
            <% if( products.image == ""){ %>
                <img id="currentImage" src="/images/node.png">


            <% }else{ %>

                <img id="currentImage" src="../../../product_images/<%= productId %>/<%= products.image %>" >

            <% } %>

        </p>
    </div>
    
    <div class="form-group">
        <label for="">Upload Image</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="">
    </div>
    
    <input type="hidden" name="pimage" value="<%= products.image %>">
    <button class="btn btn-default">Submit</button>
    
    
  </form>

  

<% include layouts/footer %>
    
