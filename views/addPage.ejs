<% include layouts/adminheader %>

    <h2 class="page-title">Add a page</h2>
      <a href="/dashboard/pages" class="btn btn-primary">Back</a>
      <br></br>

      <form method="post" action="/dashboard/pages/add-page">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" placeholder="title" value="<%= title %>" name="title"/>
        </div>
         <div class="form-group">
            <label for="slug">Slug</label>
            <input class="form-control" type="text" placeholder="slug" value="<%= slug %>" name="slug"/>
        </div>
         <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" id="editorPage" class="ck-editor__editable form-control" cols="30" rows="10" value="<%= content %>" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary form-control">Submit</button>
        </div>
        
      </form>

      

<% include layouts/adminfooter %>